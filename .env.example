# MongoDB Configuration
# Para desarrollo local usa: mongodb://localhost:27017/
# Para MongoDB Atlas usa: mongodb+srv://usuario:password@cluster.mongodb.net/
MONGODB_URI=mongodb://localhost:27017/
DATABASE_NAME=simulacion_casterly_rock

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# CORS Configuration
# Lista de origenes permitidos separados por coma
# Para desarrollo local: http://localhost:4200,http://localhost:3000
# Para producción en Vercel: https://frontend-castel.vercel.app
# Para permitir todos (NO recomendado en producción): *
CORS_ORIGINS=https://frontend-castel.vercel.app

# Logging Configuration
# Niveles: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Optional: Additional Configuration
# TIMEZONE=America/New_York
# MAX_CONNECTIONS=100
